BoxLayout:
    BoxLayout:
        id: one
        orientation: 'horizontal'
        Splitter:
            sizable_from: 'right'
            sizable_from: 'right'
            border: (1,1,1,1)
            strip_size: 2
            min_size: 150
            man_size: 200

            BoxLayout:
                id: tabs_layout
                size_hint: (0.5, 1)
                size_hint_min: (200, 32)
                orientation: 'vertical'
                padding: 2
                spacing: 5

                GridLayout:
                    rows: 1
                    row_default_height: 32
                    size_hint_y: None
                    height: 32

                    Button:
                        id: new_storage
                        text: 'New storage'
                        size_hint_y: None
                        height: '32dp'
                        on_release: app.kv_button_test()

                    Button:
                        id: settings
                        text: 'Settings'
                        size_hint_y: None
                        height: '32dp'
                        on_release:

                BoxLayout:
                    size_hint: (1, None)
                    height: 32

                    ToggleButton:
                        id: folders_tab
                        group: 'tabs'
                        text: 'FL'
                        type: 'folders'
                        size: (32, 32)
                        size_hint_max: (32, 32)
                        size_hint_min: (32, 32)
                        on_state: if self.state == 'down': app.kv_tab_selected(self.type)

                    ToggleButton:
                        id: tags_tab
                        group: 'tabs'
                        text: 'TG'
                        type: 'tags'
                        size: (32, 32)
                        size_hint_max: (32, 32)
                        size_hint_min: (32, 32)
                        on_state: if self.state == 'down': app.kv_tab_selected(self.type)

                    ToggleButton:
                        id: codetypes_tab
                        group: 'tabs'
                        text: 'CT'
                        type: 'codetypes'
                        size: (32, 32)
                        size_hint_max: (32, 32)
                        size_hint_min: (32, 32)
                        on_state: if self.state == 'down': app.kv_tab_selected(self.type)

                    ToggleButton:
                        id: search_tab
                        group: 'tabs'
                        text: 'SH'
                        type: 'search'
                        size: (32, 32)
                        size_hint_max: (32, 32)
                        size_hint_min: (32, 32)
                        on_state: if self.state == 'down': app.kv_tab_selected(self.type)

                    ToggleButton:
                        id: bookmarks_tab
                        group: 'tabs'
                        type: 'bookmarks'
                        background_normal: app.atlas_path + '/star1'
                        background_down: app.atlas_path + '/star2'
                        type: 'bookmarks'
                        size: (32, 32)
                        size_hint_max: (32, 32)
                        size_hint_min: (32, 32)
                        on_state: if self.state == 'down': app.kv_tab_selected(self.type)

                    ToggleButton:
                        id: trash_tab
                        group: 'tabs'
                        text: 'TR'
                        type: 'trash'
                        size: (32, 32)
                        size_hint_max: (32, 32)
                        size_hint_min: (32, 32)
                        on_state: if self.state == 'down': app.kv_tab_selected(self.type)

                BoxLayout:
                    height: 24
                    size_hint: (1, None)
                    orientation: 'horizontal'
                    BoxLayout:
                        size: (24, 24)
                        size_hint: (0.5, None)
                        orientation: 'horizontal'
                        visible: True if folders_tab.state == "down" else False
                        size_hint_x: 0.5 if self.visible else None
                        opacity: 1 if self.visible else 0
                        disabled: not self.visible
                        Button:
                            size: (24, 24)
                            size_hint_max: (24, 24)
                            size_hint_min: (24, 24)
                            text: "+"
                            on_release: if folders_tab.state == "down": app.kv_button_add_folder()
                        Button:
                            size: (24, 24)
                            size_hint_max: (24, 24)
                            size_hint_min: (24, 24)
                            text: "R"
                            on_release: if folders_tab.state == "down": app.kv_button_rename_folder()

                StorageSelector:
                    id: storages
                    on_selected: app.kv_storage_selected(self.selected)

        Splitter:
            sizable_from: 'right'
            border: (1,1,1,1)
            strip_size: 2
            min_size: 200
            man_size: 350
            on_release: app.kv_button_splitter_release()

            BoxLayout:
                size_hint: (.2, 1)
                orientation: 'vertical'
                padding: 2
                spacing: 5

                GridLayout:
                    rows: 1
                    row_default_height: 32
                    size_hint_y: None
                    height: 32

                    Button:
                        id: sort
                        text: '^'
                        size_hint: (None, None)
                        height: 32
                        width: 32

                    TextInput:
                        id: search
                        size_hint_y: None
                        multiline: False
                        height: 32
                        focus: True
                        on_text: app.kv_search_entered()

                ScrollView:
                    do_scroll_x: False
                    size_hint: 1, 1

                    GridLayout:
                        id: note_bar
                        size_hint: (1, None)
                        cols: 1


        BoxLayout:
            size_hint: (.7, 1)
            orientation: 'vertical'
            row_default_height: 32
            padding: 2
            spacing: 5

            BoxLayout:
                size_hint: (1, None)
                height: 32
                orientation: 'horizontal'
                padding: 2
                spacing: 5

                TextInput:
                    id: title
                    size_hint_y: None
                    multiline: False
                    height: '32dp'
                    focus: True
                    on_text: app.kv_title_entered()
                    on_focus: app.kv_title_focused(self.focused)

                Spinner:
                    id: enter_codetype
                    height: '32dp'
                    width: '232dp'

            Carousel:
                size_hint: (1, 1)
                orientation: 'horizontal'
                padding: 0
                spacing: 2

                #ShaderWidget:
                CodeInput:
                    id: code
                    text: ''
                    on_text: app.kv_code_entered()

                RstDocument:
                    id: viewer
                    text: code.text

            GridLayout:
                rows: 1
                row_default_height: 32
                size_hint_y: None
                height: 32

                Button:
                    id: tag_switch
                    text: 'TS'
                    size_hint: (None, None)
                    width: 32
                    height: 32
                    on_press: tags.visible = not tags.visible

                TextInput:
                    id: add_tag
                    size_hint_y: None
                    multiline: False
                    height: 32
                    size_hint_x: 0 if tags.visible else 1
                    opacity: 0 if tags.visible else 1
                    disabled: tags.visible
                    on_text_validate: app.kv_tag_added(self.text); self.text = ""

                Spinner:
                    id: tags
                    text: "tags"
                    values: []
                    visible: False
                    size_hint_x: 1 if self.visible else 0
                    opacity: 1 if self.visible else 0
                    disabled: not self.visible

                ToggleButton:
                    id: bookmark
                    text: 'BM'
                    size_hint: (None, None)
                    width: 32
                    height: 32
                    disabled: True
                    on_release: app.kv_bookmarked()

                ToggleButton:
                    id: trash
                    text: 'TR'
                    size_hint: (None, None)
                    width: 32
                    height: 32
                    disabled: True
                    on_release: app.kv_trashed()

<StorageSelector>:
