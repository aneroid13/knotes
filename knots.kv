BoxLayout:
    BoxLayout:
        id: one
        orientation: 'horizontal'
        BoxLayout:
            width: 134
            size_hint_x: None
            orientation: 'vertical'
            padding: 2
            spacing: 5

            GridLayout:
                rows: 1
                row_default_height: 32
                size_hint_y: None
                height: 32

                Button:
                    id: new_storage
                    text: 'New storage'
                    size_hint_y: None
                    height: '32dp'
                    on_release: app.kv_button_test()

                Button:
                    id: settings
                    text: 'Settings'
                    size_hint_y: None
                    height: '32dp'
                    on_release:

            TabbedPanel:
                id: tp
                size_hint_y: 1
                do_default_tab: False
                tab_height: 32
                tab_width: 32
                strip_border: [1,1,1,1]
             #   strip_image: True

                TabbedPanelItem:
                    id: folders
                    text: 'FL'
                    BoxLayout:
                    #    cols: 1
                        size_hint: (1, 1)
                        orientation: 'vertical'
                        BoxLayout:
                            size: (24, 24)
                            size_hint: (0.5, None)
                            orientation: 'horizontal'
                            Button:
                                size: (24, 24)
                                text: "+"
                                on_release: if hasattr(folders_tree.selected_node, "folder_id") : app.kv_button_add_folder(folders_tree.selected_node)
                            Button:
                                size: (24, 24)
                                text: "R"
                                on_release: if hasattr(folders_tree.selected_node, "folder_id") : app.kv_button_rename_folder(folders_tree.selected_node)
                        ScrollView:
                            do_scroll_x: False
                            size_hint: 1, 1
                            bar_color: [.5, .10, .15, .8]
                            bar_inactive_color: [.5, .20, .10, .5]
                            scroll_type: ['bars']  # [‘bars’, ‘content’]

                            TreeView:
                                id: folders_tree
                                size_hint: (1, None)
                                hide_root: True
                                indent_start: 4
                                indent_level: 7
                                color_selected: [.5, .10, .15, .8]
                                on_touch_up: if hasattr(self.selected_node, "folder_id") : app.kv_tree_selected(self.selected_node.folder_id)

                TabbedPanelItem:
                    id: bookmarks
                #    text: 'BM'
                    background_normal: app.atlas_path + '/star1'
                    background_down: app.atlas_path + '/star2'
                #    background_normal: 'atlas://images/default/default/star1'
                #    background_down: 'atlas://images/default/default/star2'

                TabbedPanelItem:
                    id: tags
                    text: 'TG'

                TabbedPanelItem:
                    id: trash
                    text: 'TH'

        BoxLayout:
            size_hint: (.3, 1)
            orientation: 'vertical'
            padding: 2
            spacing: 5

            GridLayout:
                rows: 1
                row_default_height: 32
                size_hint_y: None
                height: 32

                Button:
                    id: sort
                    text: '^'
                    size_hint: (None, None)
                    height: 32
                    width: 32

                TextInput:
                    id: search
                    size_hint_y: None
                    multiline: False
                    height: 32
                    focus: True
                    on_text: app.kv_search_entered()

            ScrollView:
                do_scroll_x: False
                size_hint: 1, 1

                GridLayout:
                    id: note_bar
                    size_hint: (1, None)
                    cols: 1
                    row_default_height: 64

        BoxLayout:
            size_hint: (.7, 1)
            orientation: 'vertical'
            padding: 2
            spacing: 5

            TextInput:
                id: title
                size_hint_y: None
                multiline: False
                height: '32dp'
                focus: True
                on_text: app.kv_title_entered()
                on_focus: app.kv_title_focused(self.focused)

            Carousel:
                size_hint: (1, 1)
                orientation: 'horizontal'
                padding: 0
                spacing: 2

                CodeInput:
                    id: code
                    text: ''
                    on_text: app.kv_code_entered()

                RstDocument:
                    id: viewer
                    text: code.text

            GridLayout:
                rows: 1
                row_default_height: 32
                size_hint_y: None
                height: 32

                Button:
                    id: tag_switch
                    text: 'TS'
                    size_hint: (None, None)
                    width: 32
                    height: 32
                    on_press: tags.visible = not tags.visible

                TextInput:
                    id: add_tag
                    size_hint_y: None
                    multiline: False
                    height: 32
                    size_hint_x: 0 if tags.visible else 1
                    opacity: 0 if tags.visible else 1
                    disabled: tags.visible
                    on_text_validate: app.kv_tag_added(self.text); self.text = ""

                Spinner:
                    id: tags
                    text: "tags"
                    values: []
                    visible: False
                    size_hint_x: 1 if self.visible else 0
                    opacity: 1 if self.visible else 0
                    disabled: not self.visible

                ToggleButton:
                    id: bookmark
                    text: 'BM'
                    size_hint: (None, None)
                    width: 32
                    height: 32
                    disabled: True
                    on_release: app.kv_bookmarked()

                ToggleButton:
                    id: trash
                    text: 'TR'
                    size_hint: (None, None)
                    width: 32
                    height: 32
                    disabled: True
                    on_release: app.kv_trashed()

<ColoredBL@BoxLayout>
    canvas.before:
    Color:
        rgba: 0, 1, 0, 1
    Rectangle:
        pos: self.pos
        size: self.size

<TagBubbles@Bubble>
    arrow_pos: "bottom_mid"
    orientation: 'vertical'
    size_hint: (None, None)
    width: 180
    height: 32
    BubbleButton:
        text: "test1"
    BubbleButton:
        text: "test2"

<CTextInput@TextInput>
    on_focus:
        screen = self.parent
        if screen.parent: screen.focused = self